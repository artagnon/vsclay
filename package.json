{
  "name": "vsclay",
  "displayName": "vsclay",
  "description": "Syntax definition for claytext (gh:artagnon/clayoven)",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:extension.claytext"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "claytext",
        "extensions": [
          ".clay"
        ],
        "configuration": "./syntax/claytext.json"
      }
    ],
    "grammars": [
      {
        "language": "claytext",
        "scopeName": "text.claytext",
        "path": "./syntax/claytext.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  }
}
